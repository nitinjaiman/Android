<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/cv">
    <View android:id="@+id/separatorHorizonatl"

        android:layout_width = "fill_parent"
        android:layout_height="1dp"



        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imageView" />


    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/imageView"
        android:layout_below="@id/separatorHorizonatl"

        android:scaleType="centerCrop"
        android:layout_toLeftOf="@+id/separatorVertical" />

    <ImageButton
        android:layout_width="34.5dp"
        android:layout_height="36dp"
        android:id="@+id/cross"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_imagedelete"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:padding="2dp"/>

    <ImageButton
        android:layout_width="34.5dp"
        android:layout_height="36dp"
        android:id="@+id/profile"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/img_profile"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:padding="4dp"
        android:visibility="gone"/>

    <View android:id="@+id/separatorVertical"
        android:layout_width = "1dp"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"


        android:layout_alignBottom="@+id/imageView" />



</RelativeLayout>
